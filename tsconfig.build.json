{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "@vitest/browser/providers/playwright"],
    "rootDir": "src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.jsx"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.*", "src/stories/*"]
}
