{
  "name": "@postbee/postbee-ui-lib",
  "private": false,
  "version": "1.18.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prepack": "npm run build",
    "clean": "rm -rf ./dist",
    "build:js": "tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json",
    "copy:styles": "cp -r ./src/styles ./dist/styles",
    "copy:tailwind": "cp ./tailwind.config.ts ./dist",
    "build": "npm run clean && npm run build:js && npm run copy:tailwind && npm run copy:styles",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check:unused": "knip",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx && npm run type-check && npm run check:unused",
    "format": "prettier --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "files": [
    "dist/**/*",
    "tailwind.config.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./styles": "./dist/styles/index.css",
    "./styles/*": "./dist/styles/*",
    "./tailwind.config.ts": "./dist/tailwind.config.ts"
  },
  "types": "./dist/types/index.d.ts",
  "sideEffects": [
    "dist/styles/*.css"
  ],
  "dependencies": {
    "@fontsource/poppins": "5.2.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/vite": "4.1.16",
    "clsx": "2.1.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "4.1.16"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.2",
    "@eslint/js": "9.36.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "11.0.6",
    "@semantic-release/npm": "12.0.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@smartive/eslint-config": "6.5.0",
    "@smartive/prettier-config": "3.1.2",
    "@storybook/addon-a11y": "9.1.16",
    "@storybook/addon-designs": "^10.0.2",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/addon-vitest": "9.1.16",
    "@storybook/react-vite": "9.1.16",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.0.4",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "eslint-plugin-react-hooks": "6.1.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "eslint-plugin-storybook": "9.1.16",
    "globals": "16.4.0",
    "jsdom": "27.0.0",
    "knip": "5.64.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "semantic-release": "^24.2.9",
    "storybook": "9.1.16",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.45.0",
    "vite": "7.1.12",
    "vite-plugin-svgr": "4.5.0",
    "vitest": "3.2.4"
  }
}
