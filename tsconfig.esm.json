{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
